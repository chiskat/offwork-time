{
  "scripts": {
    "dev": "dotenv craco start",
    "start": "dotenv craco start",
    "build": "dotenv craco build",
    "test": "craco test",
    "eject": "craco eject",
    "check-types": "tsc --noEmit",
    "format": "prettier --list-different \"src/**/*.{ts,tsx,css,scss,less}\" \"./*.js\"",
    "lint": "eslint \"src/**/*.{ts,tsx}\" \"./*.js\""
  },
  "dependencies": {
    "@ant-design/icons": "^4.6.2",
    "@babel/core": "7.16.0",
    "@craco/craco": "^7.1.0",
    "@craco/types": "^7.1.0",
    "@trivago/prettier-plugin-sort-imports": "^6.0.2",
    "@types/node": "^20.19.30",
    "@types/react": "^18.3.27",
    "@types/react-dom": "^18.3.7",
    "ahooks": "^3.9.6",
    "antd": "^4.24.12",
    "clsx": "^2.1.1",
    "craco-antd": "^2.0.0",
    "css-loader": "^6.11.0",
    "date-fns": "^4.1.0",
    "dotenv-cli": "^11.0.0",
    "eslint": "8.47.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-config-react-app": "^7.0.1",
    "eslint-plugin-prettier": "^5.5.5",
    "less": "^3.13.1",
    "less-loader": "11.1.4",
    "lodash-es": "^4.17.22",
    "prettier": "^3.8.0",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "rc-picker": "^2.5.10",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-router": "^7.12.0",
    "react-scripts": "5.0.1",
    "style-loader": "^3.3.4",
    "tailwindcss": "^3.4.3",
    "typescript": "~5.1.6",
    "zustand": "^5.0.10"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest",
      "plugin:prettier/recommended"
    ]
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "semi": false,
    "trailingComma": "es5",
    "tabWidth": 2,
    "arrowParens": "avoid",
    "endOfLine": "lf",
    "plugins": [
      "@trivago/prettier-plugin-sort-imports",
      "prettier-plugin-tailwindcss"
    ],
    "importOrder": [
      "^(server|client)-only$",
      "^@?[a-zA-Z]+.+",
      "^@/(?!.*\\.(css|scss|less)$)",
      "^\\.\\.?/(?!.*.(css|scss|less)$)",
      "^.(?!(css|scss|less)$)[^.]*$",
      "(.css|.scss|.less)$"
    ],
    "importOrderSeparation": true,
    "importOrderSortSpecifiers": false,
    "importOrderGroupNamespaceSpecifiers": false
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
